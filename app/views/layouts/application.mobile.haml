!!!
%html
  %head
    %title MyMobileVideo
    = stylesheet_link_tag 'compiled/mobile.css' if mobile_device?
    = stylesheet_link_tag '/jqtouch/jqtouch.min.css', '/jqtouch/themes/apple/theme.min.css'
    = javascript_include_tag 'flowplayer-3.2.4.min.js', '/jqtouch/jquery.1.3.2.min.js', '/jqtouch/jqtouch.min.js', 'mobile'
    
    = csrf_meta_tag
  %body
    .current
      .toolbar
        = link_to "Back", nil, :class => "back" unless current_page? root_path
        %h1 MyMobileVideo
        = link_to "Full Site", root_url(:mobile => 0), :class => "button", :rel => "external"
      - unless flash.empty?
        .info
          - flash.each do |name,msg|
            = content_tag :div, msg, :id => "flash_#{name}"
      .content
        .register-now
          -if !user_signed_in?
            Be a part of the future.
            = link_to ' Sign up now!', new_user_registration_path, :class => "button"
        = yield
