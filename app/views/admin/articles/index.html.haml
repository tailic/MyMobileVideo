%h1= t('.title')

%table.admin-table
  %thead
    %tr
      %th Thumb
      %th Article
      %th Erstellt am
      %th Optionen
  %tbody
  - @articles.each do |article|
    %tr
      %td{:width => '60px'}= image_tag(get_asset_thumb(article.asset.url, article.asset.original_filename, "thumb"), :width => "80px")
      %td{:width => '330px'}= link_to article.title, article
      %td{:width => '90px'}= l(article.created_at, :format => :custom)
      %td.options    
        = link_to "", article, {:class => 'icon show', :title => 'Anzeigen'}
        = link_to "", edit_article_path(article), {:class => 'icon edit', :title => 'Bearbeiten'}
        = button_to "", article, :confirm => "Are you sure?", :method => :delete, :class => "icon delete"
