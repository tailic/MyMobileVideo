#notice= notice
%h1= @article.title
.video
  = link_to '', @article.asset.url, :id => "player_#{@article.id}"
  %script
    = "flowplayer('player_#{@article.id}', '/videos/flowplayer-3.2.5.swf', {clip:{autoPlay: false}});"
    
.description
  %h4 Beschreibung
  = @article.body


%p
- if user_signed_in?
  = link_to 'Edit', edit_article_path(@article)
  |
= link_to 'Back', articles_path

